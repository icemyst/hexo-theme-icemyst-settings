nav#nav
  span#blog-info
    if theme.nav.enable
      .back-home-button
        i.fas.fa-grip-vertical


    if theme.nav.logo
      img.site-icon(src=url_for(theme.nav.logo))
    if theme.nav.display_title
      a(href=url_for('/'))
        span.site-name=config.title




    //- if theme.nav.enable
      .back-home-button
        i.fas.fa-grip-vertical
        .back-menu-list-groups
          each group in theme.nav.menu
            .back-menu-list-group
              .back-menu-list-title= group.title
              .back-menu-list
                each item in group.item
                  a.back-menu-item(href=item.link, title=item.name, target='_blank')
                    img.back-menu-item-icon(src=item.icon alt=item.name)
                    span.back-menu-item-text= item.name 


  #menus
    !=partial('includes/header/menu_item', {}, {cache: true})

    //- center(id="name-container")
      a(id="page-name" onclick="btf.scrollToDest(0, 500)") PAGE_NAME

    if (theme.algolia_search.enable || theme.local_search.enable || theme.docsearch.enable)



      #search-button
        a.site-page.social-icon.search(href="javascript:void(0);" title=_p('search.title'))
          i.fas.fa-search.fa-fw

    #toggle-menu
      a.site-page(href="javascript:void(0);")
        i.fas.fa-bars.fa-fw

script.
